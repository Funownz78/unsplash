<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.ThirdOnBoardingFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="-35dp"
        android:layout_width="554dp"
        android:layout_height="585dp"
        android:src="?attr/onboarding_photos"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_gravity="center"
        android:layout_width="606dp"
        android:layout_height="555dp"
        android:layout_marginBottom="-270dp"
        android:src="@drawable/circle_green_gradient"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="50dp"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:text="@string/third_onboarding_string"/>

    <ImageButton
        android:id="@+id/third_to_next_screen"
        android:background="#00FFFFFF"
        android:layout_gravity="end"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="?attr/onboarding_right" />

    <ImageButton
        android:id="@+id/third_to_prev_screen"
        android:background="#00FFFFFF"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="?attr/onboarding_left" />

</FrameLayout>