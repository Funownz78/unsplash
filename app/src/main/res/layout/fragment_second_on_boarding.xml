<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.SecondOnBoardingFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="15dp"
        android:layout_width="483dp"
        android:layout_height="479dp"
        android:layout_gravity="center_horizontal"
        android:src="?attr/onboarding_photos"
        tools:ignore="ContentDescription" />
<!--    android:src="?attr/onboarding_photos"-->
<!--    android:src="@drawable/photos"-->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="574dp"
        android:layout_height="555dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="477dp"
        android:src="@drawable/circle_green_gradient"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="600dp"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:text="@string/second_onboarding_string"/>

    <ImageButton
        android:id="@+id/second_to_next_screen"
        android:background="#00FFFFFF"
        android:layout_gravity="end"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="?attr/onboarding_right" />

    <ImageButton
        android:id="@+id/second_to_prev_screen"
        android:background="#00FFFFFF"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="?attr/onboarding_left" />



</FrameLayout>