<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.LoginFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:background="@color/black">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/unsplash" />
    </FrameLayout>
    <Button
        android:id="@+id/login_button"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/auth_button_background"
        android:textColor="@color/auth_button_text"
        android:layout_gravity="center_horizontal"
        android:text="@string/login_unboarding_string"
        android:layout_marginTop="480dp"/>

</FrameLayout>