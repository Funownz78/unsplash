<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.FirstOnBoardingFragment"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?attr/onboarding_photos"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:layout_width="606dp"
        android:layout_height="555dp"
        android:layout_marginTop="146dp"
        android:layout_marginBottom="190dp"
        android:src="@drawable/circle_green_gradient"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="50dp"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:text="@string/first_onboarding_string"/>

    <ImageButton
        android:id="@+id/first_to_next_screen"
        android:background="#00FFFFFF"
        android:layout_gravity="end"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="?attr/onboarding_right" />
</FrameLayout>